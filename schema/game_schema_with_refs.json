{
    "$id": "GameSchema",
    "type": "object",
    "properties": {
        "metadata": {
            "type": "object",
            "properties": {
                "prolific_id": {"type": "string"},
                "id": {"type": "string"},
                "index": {"type": "number"},
                "room": {"type": "string"},
                "notes": {"type": "string"}
            },
            "required": ["prolific_id", "id", "index", "room"],
            "additionalProperties": false
        },
        "throwing": {
            "type": "object",
            "properties": {
                "what": {
                    "type": "array",
                    "items": {"$ref": "#/$defs/throwingObject"}
                },
                "from": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/objectWithPredicates" }
                },
                "on": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/objectWithPredicates" }
                },
                "goal": {
                    "type": "array", 
                    "items": {"enum": ["in", "over", "hit", "on"]}
                },
                "to": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/objectWithPredicates" }
                }
            },
            "required": ["what", "to", "goal"],
            "additionalProperties": false
        },
        "building": {
            "type": "object",
            "properties": {
                "objects": {
                    "type": "array",
                    "items": {"$ref": "#/$defs/buildingObject"}
                },
                "goal": {"enum": ["num_objects", "structure", "num_simultaneous_objects"]},
                "structure": {"enum": ["pyramid", "tower", "match_setup"]},
                "order": {
                    "type": "array",
                    "items": {"$ref": "#/$defs/buildingObject"}
                },
                "on": { "$ref": "#/$defs/objectWithPredicates" }
            },
            "required": ["objects", "goal"],
            "additionalProperties": false
        },
        "organizing": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "what": {
                        "type": "array",
                        "items": {"$ref": "#/$defs/moveableObject"}
                    },
                    "from": { "$ref": "#/$defs/objectWithPredicates" },
                    "to": { 
                        "type": "array",
                        "items": {"$ref": "#/$defs/objectWithPredicates"}
                    },
                    "condition": { "enum": ["order"] }
                },
                "required": ["what", "to"]
            }
        }
    },
    "additionalProperties": false,

    "$defs": {
        "objectWithPredicates": {
            "type": "object",
            "properties": {
                "object": {"$ref": "#/$defs/anyObject"},
                "predicates": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "object": {"$ref": "#/$defs/anyObject"},
                            "predicate": {"$ref": "#/$defs/predicate"},
                            "negate": {"type": "boolean", "default": false}
                        },
                        "required": ["predicate"],
                        "additionalProperties": false
                    }
                }
            },
            "required": ["object"],
            "additionalProperties": false
        },
        "anyObject": {"anyOf": [ 
            {"$ref": "#/$defs/schemaReferences"},
            {"$ref": "#/$defs/immoveableObject"},
            {"$ref": "#/$defs/moveableObject"},
            {"const": "agent"}
        ]},
        "schemaReferences": {"enum": ["from"]},
        "immoveableObject": {"enum": ["desk", "room_corner", "floor", "room_center", "rug", "door", "shelf", "building", "bed", "drawer", "top_drawer", "west_wall", "south_wall", "wall", "room_side", "sliding_door", "desk_shelf"]},

        "moveableObject": {"anyOf": [
            {"$ref": "#/$defs/throwingObject"}, 
            {"$ref": "#/$defs/buildingObject"},
            {"$ref": "#/$defs/otherObject"},
            {"const": ""}
        ]},
        "throwingObject": {"enum": ["ball", "golfball", "dodgeball", "basketball", "beachball", "teddy_bear", "book", "cube_block", "laptop", "pink_dodgeball", "green_golfball", "alarm_clock", "cellphone", "mug", "key_chain", "cd", "game_object"]},
        "buildingObject": {"enum": ["any", "block", "pyramid_block", "bridge_block", "flat_block", "tall_cylindrical_block", "cube_block", "cylindrical_block", "triangular_block", "hexagonal_bin", "game_object"] },
        "otherObject": {"enum": ["doggie_bed", "curved_wooden_ramp",  "hexagonal_bin", "pillow", "chair", "triangular_ramp", "key_chain", "cellphone", "mug", "cd", "watch", "credit_card", "alarm_clock", "main_light_switch", "small_ramp", "green_triangular_ramp", "desktop", "blinds", "pencil", "pen"]},

        "predicate": {"enum": ["left", "right", "adjacent", "on", "open", "upside_down", "left", "near", "faces", "touch", "opposite", "equal", "equal_z_position", "toggled_on", "in"]}
    }
} 